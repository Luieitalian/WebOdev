@model WebOdev.Models.IslemModel

@{
    ViewData["Title"] = "İşlem Ekle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">İşlem Bilgileri</h4>
            <div class="form-group">
                <label asp-for="Baslik" class="control-label">Başlık</label>
                <input asp-for="Baslik" class="form-control" placeholder="İşlem başlığını girin" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label">Açıklama</label>
                <textarea asp-for="Aciklama" class="form-control" rows="4" placeholder="İşlem açıklamasını girin"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uzunluk" class="control-label">Uzunluk</label>
                <input asp-for="Uzunluk" type="time" class="form-control" />
                <span asp-validation-for="Uzunluk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ucret" class="control-label">Ücret</label>
                <input asp-for="Ucret" type="number" class="form-control" step="0.01" placeholder="Ücreti girin" />
                <span asp-validation-for="Ucret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cinsiyet" class="control-label">Cinsiyet</label>
                <select asp-for="Cinsiyet" class="form-control" asp-items="Html.GetEnumSelectList<WebOdev.Models.CinsiyetEnum>()">
                    <option value="">Cinsiyet Seçiniz</option>
                </select>
                <span asp-validation-for="Cinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
            </div>
        </div>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Listeye Dön
    </a>
</div>

@section Scripts {
    @Html.RenderPartialAsync("_ValidationScriptsPartial")
}
