@model WebOdev.Models.RandevuModelDto

@{
    ViewData["Title"] = "Yeni Randevu Ekle";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <form asp-action="RandevuEkle" method="post" class="shadow p-4 rounded bg-light">
        @Html.AntiForgeryToken()

        <!-- Başlangıç Tarihi -->
        <div class="form-group mb-3">
            <label for="BaslangicTarihi" class="form-label">Başlangıç Tarihi</label>
            <input asp-for="BaslangicTarihi" class="form-control" />
            <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
        </div>

        <!-- Bitiş Tarihi -->
        <div class="form-group mb-3">
            <label for="BitisTarihi" class="form-label">Bitiş Tarihi</label>
            <input asp-for="BitisTarihi" class="form-control" />
            <span asp-validation-for="BitisTarihi" class="text-danger"></span>
        </div>

        <!-- Çalışan Seçimi -->
        <div class="form-group mb-3">
            <label for="CalisanAdi" class="form-label">Çalışan</label>
            <select asp-for="CalisanAdi" class="form-control" aria-label="Çalışan Seçimi">
                <option value="">Lütfen Çalışan Seçin</option>
                @foreach (var calisan in Model.Prepare.Calisan)
                {
                    <option value="@calisan.Value">@calisan.Text</option>
                }
            </select>
            <span asp-validation-for="CalisanAdi" class="text-danger"></span>
        </div>



        <!-- Müşteri Seçimi -->
        <div class="form-group mb-3">
            <label for="MusteriAdi" class="form-label">Müşteri</label>
            <select asp-for="MusteriAdi" class="form-control">
                <option value="">Müşteri Seçin</option>
                @foreach (var musteri in Model.Prepare.Musteriler)
                {
                    <option value="@musteri.Value">@musteri.Text</option>
                }
            </select>
            <span asp-validation-for="MusteriAdi" class="text-danger"></span>
        </div>

        <!-- İşlem Seçimi -->
        <div class="form-group mb-4">
            <label for="IslemAdi" class="form-label">İşlem</label>
            <select asp-for="IslemAdi" class="form-control">
                <option value="">İşlem Seçin</option>
                @foreach (var islem in Model.Prepare.Islemler)
                {
                    <option value="@islem.Value">@islem.Text</option>
                }
            </select>
            <span asp-validation-for="IslemAdi" class="text-danger"></span>
        </div>

        <!-- Butonlar -->
        <div class="form-group text-center">
            <button type="submit" class="btn btn-success btn-lg w-100">Kaydet</button>
        </div>

        <div class="form-group text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary btn-lg w-100">Geri Dön</a>
        </div>
    </form>
</div>

@section Scripts {
    @Html.RenderPartialAsync("_ValidationScriptsPartial")
}
