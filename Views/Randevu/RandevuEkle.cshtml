@model WebOdev.Models.IslemModel

@{
    ViewData["Title"] = "İşlem Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Baslik" class="control-label">Başlık</label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aciklama" class="control-label">Açıklama</label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Uzunluk" class="control-label">Uzunluk</label>
        <input asp-for="Uzunluk" type="time" class="form-control" />
        <span asp-validation-for="Uzunluk" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ucret" class="control-label">Ücret</label>
        <input asp-for="Ucret" type="number" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cinsiyet" class="control-label">Cinsiyet</label>
        <select asp-for="Cinsiyet" class="form-control" asp-items="Html.GetEnumSelectList<CinsiyetEnum>()">
            <option value="">Select</option>
        </select>
        <span asp-validation-for="Cinsiyet" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
