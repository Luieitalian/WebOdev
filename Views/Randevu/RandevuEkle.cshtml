@model WebOdev.Models.RandevuModel

<h2 class="mb-4">Yeni Randevu Ekle</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="BaslangicTarihi" class="control-label">Başlangıç Tarihi</label>
        <input asp-for="BaslangicTarihi" type="datetime-local" class="form-control" />
        <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BitisTarihi" class="control-label">Bitiş Tarihi</label>
        <input asp-for="BitisTarihi" type="datetime-local" class="form-control" />
        <span asp-validation-for="BitisTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CalisanId" class="control-label">Çalışan</label>
        <select asp-for="CalisanId" class="form-control" asp-items="@(new SelectList(ViewBag.Calisanlar, "KullaniciId", "AdSoyad"))">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="CalisanId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MusteriId" class="control-label">Müşteri</label>
        <select asp-for="MusteriId" class="form-control" asp-items="@(new SelectList(ViewBag.Musteriler, "KullaniciId", "AdSoyad"))">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="MusteriId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IslemId" class="control-label">İşlem</label>
        <select asp-for="IslemId" class="form-control" asp-items="@(new SelectList(ViewBag.Islemler, "Id", "Baslik"))">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="IslemId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>

@section Scripts {
    @Html.RenderPartialAsync("_ValidationScriptsPartial")
}
