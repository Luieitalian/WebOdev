@{
    ViewData["Title"] = "Randevular";
}
@model IEnumerable<RandevuModel>

<h2 class="mb-4">@ViewData["Title"]</h2>

@* ADMIN SAYFASI *@

<!-- Randevular Tablosu -->
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Çalışan İsim Soyisim</th>
                <th>Müşteri İsim Soyisim</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Id</td>
                    <td>@randevu?.Calisan?.Kullanici.Isim @randevu?.Calisan?.Kullanici.Soyisim</td>
                    <td>@randevu?.Musteri?.Kullanici.Isim @randevu?.Musteri?.Kullanici.Soyisim</td>
                    <td>@randevu?.BaslangicTarihi.ToString()</td>
                    <td>@randevu?.BitisTarihi.ToString()</td>
                    <td>@randevu?.Islem?.Baslik</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Sayfalama -->
@if (Model.Any())
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Önceki</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">Sonraki</a>
            </li>
        </ul>
    </nav>
}

