@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div id="loginCard" class="card shadow-lg border-0" style="transition: transform 0.3s ease; background-color: #f8f9fa;">
                <div class="card-body">
                    <form action="@Url.Action("GirisYap", "Giris")" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label for="email" class="form-label" style="color: #212529;">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Email adresinizi girin" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label" style="color: #212529;">Şifre</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Şifrenizi girin" required />
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" id="rememberMe" name="rememberMe" class="form-check-input" />
                            <label for="rememberMe" class="form-check-label" style="color: #212529;">Beni Hatırla</label>
                        </div>
                        <button type="submit" class="btn w-100" style="background-color: #343a40; color: #ffffff;">Giriş Yap</button>
                    </form>
                </div>
                <div class="card-footer text-center" style="background-color: #e9ecef;">
                    <p style="color: #212529;">Hesabınız yok mu? <a href="@Url.Action("Index", "Kayit")" style="color: #343a40;">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger mt-3">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const loginCard = document.getElementById("loginCard");

        // Büyüme ve küçülme animasyonu için setTimeout
        setTimeout(() => {
            loginCard.style.transform = "scale(1.05)";
        }, 500);

        setTimeout(() => {
            loginCard.style.transform = "scale(1)";
        }, 1000);

        // Kullanıcı tıkladığında kartın büyümesini/küçülmesini sağlama
        loginCard.addEventListener("mouseenter", () => {
            loginCard.style.transform = "scale(1.05)";
        });

        loginCard.addEventListener("mouseleave", () => {
            loginCard.style.transform = "scale(1)";
        });
    });
</script>