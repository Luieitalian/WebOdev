@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Slider Başlangıç -->
<div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <!-- İlk Slide -->
        <div class="carousel-item active">
            <img src="@Url.Content("~/images/a.jpg")" class="d-block mx-auto slider-img" alt="Saç Kesimi" loading="lazy">
            <div class="carousel-caption custom-caption">
                <h1>Profesyonel Saç Kesimi</h1>
                <p>Modern ve klasik tarzlarda uzman kesimler.</p>
            </div>
        </div>
        <!-- İkinci Slide -->
        <div class="carousel-item">
            <img src="@Url.Content("~/images/b.jpg")" class="d-block mx-auto slider-img" alt="Saç Şekillendirme" loading="lazy">
            <div class="carousel-caption custom-caption">
                <h1>Saç Şekillendirme</h1>
                <p>Profesyonel ürünlerle sağlıklı ve parlak saçlar.</p>
            </div>
        </div>
        <!-- Üçüncü Slide -->
        <div class="carousel-item">
            <img src="@Url.Content("~/images/c.jpg")" class="d-block mx-auto slider-img" alt="Berber Hizmeti" loading="lazy">
            <div class="carousel-caption custom-caption">
                <h1>Berber Hizmetleri</h1>
                <p>Erkeklere özel kesim ve bakımlar.</p>
            </div>
        </div>
        <!-- Dördüncü Slide -->
        <div class="carousel-item">
            <img src="@Url.Content("~/images/d.jpg")" class="d-block mx-auto slider-img" alt="Spa ve Rahatlama" loading="lazy">
            <div class="carousel-caption custom-caption">
                <h1>Spa ve Rahatlama</h1>
                <p>Kendinizi ödüllendirin ve dinlenmenin tadını çıkarın.</p>
            </div>
        </div>
        <!-- Beşinci Slide -->
        <div class="carousel-item">
            <img src="@Url.Content("~/images/e.jpg")" class="d-block mx-auto slider-img" alt="Manikür ve Pedikür" loading="lazy">
            <div class="carousel-caption custom-caption">
                <h1>Manikür ve Pedikür</h1>
                <p>Elleriniz ve ayaklarınız için özel bakım hizmetleri.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>
<!-- Slider Sonu -->
<!-- Kartlar Başlangıç -->
<section id="services" class="container my-5">
    <div class="row text-center">
        <h2 class="mb-4">Hizmetlerimiz</h2>
        <p class="mb-5 text-muted">En kaliteli hizmetlerimizi keşfedin ve ihtiyaçlarınıza uygun çözümleri bulun.</p>
        <!-- Çalışanlar Kartı -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body">
                    <div class="card-icon mb-3 text-primary">
                        <i class="bi bi-people-fill display-4"></i>
                    </div>
                    <h5 class="card-title">Çalışanlar</h5>
                    <p class="card-text">Ekibimiz hakkında bilgi edinin ve çalışanlarımızı tanıyın.</p>
                </div>
                <div class="card-footer bg-white">
                    <a asp-controller="Calisan" asp-action="Index" class="btn btn-primary">Daha Fazla</a>
                </div>
            </div>
        </div>
        <!-- İşlemler Kartı -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body">
                    <div class="card-icon mb-3 text-success">
                        <i class="bi bi-gear-fill display-4"></i>
                    </div>
                    <h5 class="card-title">İşlemler</h5>
                    <p class="card-text">Yürüttüğümüz işlemler ve sunduğumuz hizmetler hakkında bilgi alın.</p>
                </div>
                <div class="card-footer bg-white">
                    <a asp-controller="Islem" asp-action="Index" class="btn btn-success">Daha Fazla</a>
                </div>
            </div>
        </div>
        <!-- Randevular Kartı -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                <div class="card-body">
                    <div class="card-icon mb-3 text-info">
                        <i class="bi bi-calendar-check-fill display-4"></i>
                    </div>
                    <h5 class="card-title">Randevular</h5>
                    <p class="card-text">Randevu almak ve yönetmek için gerekli adımları öğrenin.</p>
                </div>
                <div class="card-footer bg-white">
                    <a asp-controller="Randevu" asp-action="Index" class="btn btn-info">Daha Fazla</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Kartlar Sonu -->
<!-- CSS Düzenlemeleri -->
<style>
    .slider-img {
        height: 350px; /* Daha küçük bir yükseklik */
        width: 90%; /* Yatayda biraz daraltılmış görünüm */
        object-fit: cover; /* Resmin en-boy oranını koruyarak uygun görünmesini sağlar */
        border-radius: 15px; /* Köşeleri yuvarlat */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); /* Görsel olarak şık bir gölge efekti */
    }

    .carousel-caption.custom-caption {
        background: rgba(0, 0, 0, 0.6); /* Şeffaf bir arka plan */
        padding: 15px;
        border-radius: 10px;
        max-width: 60%; /* Daha kompakt başlık alanı */
    }

    .carousel-caption h1 {
        font-size: 2rem; /* Daha küçük başlık */
        color: #fff;
    }

    .carousel-caption p {
        font-size: 1.1rem;
        color: #f8f9fa;
    }

    .carousel-indicators button {
        background-color: #fff; /* Göstergeler için beyaz renk */
    }

    .card-icon {
        font-size: 3rem;
    }

    .card {
        border: none;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        color: #6c757d;
    }

    .card-footer .btn {
        width: 100%;
    }
</style>