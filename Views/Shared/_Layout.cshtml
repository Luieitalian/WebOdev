</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">HairStylist</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" style="color:white" asp-area="" asp-controller="Anasayfa" asp-action="Index">Anasayfa</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Calisan" asp-action="Index">Çalışanlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Islem" asp-action="Index">İşlemler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Randevu" asp-action="Randevular">Randevular</a>
                            </li>
                        }
                        @if (User.IsInRole("Calisan")) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:saddlebrown" asp-area="" asp-controller="Calisan" asp-action="CalisanPaneli">Çalışan Paneli</a>
                            </li>
                        }
                        @if (User.IsInRole("Calisan") || User.IsInRole("Musteri"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="RandevuAl" asp-action="Adim1">Randevu Al</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Randevu" asp-action="Randevularim">Randevularım</a>
                            </li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Giris" asp-action="Index">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Kayit" asp-action="Index">Kayıt Ol</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Giris" asp-action="CikisYap">Çıkış Yap</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
