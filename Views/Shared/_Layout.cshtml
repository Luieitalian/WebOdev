<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebOdev</title>
    @* Eski CSS Bağlantıları *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    @* <link rel="stylesheet" href="~/WebOdev.styles.css" asp-append-version="true" /> *@

    @* Güncellenmiş CSS Bağlantıları *@
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.rtl.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">HairStylist</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="" asp-controller="Anasayfa" asp-action="Index">Anasayfa</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-controller="Calisan" asp-action="Index">Çalışanlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-controller="Islem" asp-action="Index">İşlemler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-controller="Randevu" asp-action="Randevular">Randevular</a>
                            </li>
                        }
                        @if (User.IsInRole("Calisan"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-calisan" asp-area="" asp-controller="Calisan" asp-action="CalisanPaneli">Çalışan Paneli</a>
                            </li>
                        }
                        @if (User.IsInRole("Calisan") || User.IsInRole("Musteri"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-controller="RandevuAl" asp-action="Adim1">Randevu Al</a>
                            </li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-controller="Giris" asp-action="Index">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-controller="Kayit" asp-action="Index">Kayıt Ol</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-area="" asp-controller="Giris" asp-action="CikisYap">Çıkış Yap</a>
                            </li>
                        }
                        <!-- "About" ve "Dropdown" bölümleri kaldırıldı -->
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebOdev - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @* JavaScript Dosyaları *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
